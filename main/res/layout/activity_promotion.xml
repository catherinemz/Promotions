<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/pad_16"
    tools:context="mx.edu.utng.schedule.Activity.PromotionActivity"
    android:background="@drawable/blue_background">

    <Button
        android:id="@+id/btn_choose_file_prom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/margin_74"
        android:background="@drawable/border"
        android:text="@string/elige_una_imagen"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_200"
        android:id="@+id/imv_promotion_image"
        android:src="@mipmap/ic_launcher"
        android:layout_toRightOf="@id/btn_choose_file_prom"
        />

    <EditText
        android:id="@+id/edt_promotion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imv_promotion_image"
        android:layout_marginTop="@dimen/size_50"
        android:background="@drawable/border"
        android:gravity="center"
        android:hint="@string/description"
        android:paddingLeft="@dimen/size_10"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/size_25"
        android:textStyle="bold" />


    <ProgressBar
        android:id="@+id/pgb_loading_prom"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_upload_prom"
        android:layout_marginTop="@dimen/size_50"
        />

    <Button
        android:id="@+id/btn_upload_prom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/size_60"
        android:layout_marginEnd="@dimen/size_50"
        android:layout_marginRight="@dimen/size_50"
        android:layout_toLeftOf="@+id/btn_show_prom"
        android:layout_toStartOf="@+id/btn_show_prom"
        android:background="@drawable/border"
        android:text="@string/guardar"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_show_prom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_upload_prom"
        android:layout_alignBottom="@+id/btn_upload_prom"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/size_66"
        android:layout_marginRight="@dimen/size_66"
        android:background="@drawable/border"
        android:text="@string/show"
        android:textColor="@color/white"
        android:textStyle="bold" />

</RelativeLayout>
